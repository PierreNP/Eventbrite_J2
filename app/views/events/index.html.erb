    <div class="jumbotron">
      <h1 class="display-4">The Eventbrite Killer</h1>
      <p class="lead">Dis bye bye à Eventbrite!</p>
      <!--   <hr class="my-4">   -->
      <p class="lead">
        <% if !current_user%>  <%= link_to "Connexion", new_user_session_path, class:"btn btn-primary btn-lg" %> <% else %> <%= link_to "Créer un event", new_event_path, class:"btn btn-primary btn-lg" %>  <% end %>
      </p>

    </div>
    <p id="notice"><%= notice %></p>
    <h1>Tous les Events</h1>
    <div class='event-grid'>
      <% @events.sort.each do |event| %>
        <div class="card event-card">
          <img class="card-img-top" src="https://source.unsplash.com/1600x900/?event,concert" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description %></p>
              <div>
            <%= link_to "Details", event_path(event.id), class:'btn btn-primary' %>
            
              <% if current_user && current_user.id == event.admin_id %>  
                      <%= link_to 'Edit', edit_event_path(event.id), class:'btn btn-warning' %> 
                      <%= link_to 'Supprimer', event_path(event.id),method: :delete, class:'btn btn-danger' %>         
              <%end%>
            </div>
          </div>
          

        </div>
      <% end %>
    </div>



